<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>


<GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="app.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <BorderPane prefHeight="460.0" prefWidth="469.0">
         <center>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Calculadora de Consumo de combustiveis">
                     <VBox.margin>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                     </VBox.margin>
                  </Text>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Velocidade">
                     <VBox.margin>
                        <Insets left="50.0" />
                     </VBox.margin>
                  </Text>
                  <Slider fx:id="sliderVelocidade" blockIncrement="1.0" majorTickUnit="10.0" max="300.0" min="10.0" showTickLabels="true" showTickMarks="true">
                     <VBox.margin>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="5.0" />
                     </VBox.margin>
                  </Slider>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Temperatura do Ar Condicionado">
                     <VBox.margin>
                        <Insets left="50.0" />
                     </VBox.margin>
                  </Text>
                  <Slider fx:id="sliderTemperatura" blockIncrement="1.0" majorTickUnit="2.0" max="40.0" min="10.0" showTickLabels="true" showTickMarks="true">
                     <VBox.margin>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="5.0" />
                     </VBox.margin>
                  </Slider>
                  <Separator prefWidth="200.0">
                     <VBox.margin>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                     </VBox.margin>
                  </Separator>
                  <Button mnemonicParsing="false" onAction="#calculaConsumo" text="Calcular">
                     <VBox.margin>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                     </VBox.margin>
                  </Button>
                  <Text fx:id="textResult" strokeType="OUTSIDE" strokeWidth="0.0" text="Text">
                     <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </VBox.margin>
                  </Text>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
</GridPane>
